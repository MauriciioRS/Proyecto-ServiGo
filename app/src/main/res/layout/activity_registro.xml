<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".RegistroActivity">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/create_account"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <!-- Nombres -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nombres_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="340dp"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:hint="@string/nombres"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombres_edit_text"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Apellidos -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/apellidos_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="337dp"
            android:layout_height="63dp"
            android:layout_marginTop="24dp"
            android:hint="@string/apellidos"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombres_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/apellidos_edit_text"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- DNI -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dni_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="335dp"
            android:layout_height="69dp"
            android:layout_marginTop="16dp"
            android:hint="@string/dni"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellidos_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dni_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="8" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha de Nacimiento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fecha_nacimiento_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="343dp"
            android:layout_height="63dp"
            android:layout_marginTop="16dp"
            android:hint="@string/fecha_nacimiento"
            app:boxStrokeColor="@color/primary"
            app:endIconDrawable="@android:drawable/ic_menu_recent_history"
            app:endIconMode="custom"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dni_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fecha_nacimiento_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Edad -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edad_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="343dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:hint="@string/edad"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fecha_nacimiento_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edad_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:maxLength="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Provincia -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/provincia_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:hint="@string/provincia"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edad_input_layout">

            <AutoCompleteTextView
                android:id="@+id/provincia_auto_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ciudad -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ciudad_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="344dp"
            android:layout_height="69dp"
            android:layout_marginTop="16dp"
            android:hint="@string/ciudad"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provincia_input_layout">

            <AutoCompleteTextView
                android:id="@+id/ciudad_auto_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Distrito -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/distrito_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="344dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:hint="@string/distrito"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ciudad_input_layout">

            <AutoCompleteTextView
                android:id="@+id/distrito_auto_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dirección -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/direccion_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="342dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:hint="@string/direccion"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distrito_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/direccion_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:maxLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Oficio -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/oficio_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="338dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:hint="@string/oficio"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direccion_input_layout">

            <AutoCompleteTextView
                android:id="@+id/oficio_auto_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Registrarse -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/registrarse_button"
            android:layout_width="349dp"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/register"
            android:textSize="16sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oficio_input_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
