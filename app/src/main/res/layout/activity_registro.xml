<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".RegistroActivity">

        <!-- Indicador de progreso -->

        <!-- Título principal -->

        <TextView
            android:id="@+id/progress_indicator"
            android:layout_width="79dp"
            android:layout_height="21dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Paso 1 de 3"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ingresa los siguientes datos"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_indicator" />

        <!-- Nombre -->

        <TextView
            android:id="@+id/nombre_label"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:text="Nombre"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <EditText
            android:id="@+id/nombres_edit_text"
            android:layout_width="354dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:hint="Ingresa tu nombre"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre_label" />

        <!-- Apellido -->

        <TextView
            android:id="@+id/apellido_label"
            android:layout_width="59dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="Apellido"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombres_edit_text" />

        <EditText
            android:id="@+id/apellidos_edit_text"
            android:layout_width="353dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:hint="Ingresa tu apellido"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellido_label" />

        <!-- DNI -->

        <TextView
            android:id="@+id/dni_label"
            android:layout_width="33dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="DNI"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellidos_edit_text" />

        <EditText
            android:id="@+id/dni_edit_text"
            android:layout_width="156dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_field_background"
            android:hint="Ingresa tu dni"
            android:inputType="number"
            android:maxLength="8"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toStartOf="@+id/fecha_nacimiento_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dni_label"
            app:layout_constraintWidth_percent="0.48" />

        <!-- Fecha de Nacimiento -->

        <TextView
            android:id="@+id/fecha_nacimiento_label"
            android:layout_width="135dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:text="Fecha de nacimiento"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apellidos_edit_text" />

        <EditText
            android:id="@+id/fecha_nacimiento_edit_text"
            android:layout_width="167dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:clickable="true"
            android:focusable="false"
            android:hint="DD / MM / YY"
            android:inputType="date"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dni_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/fecha_nacimiento_label"
            app:layout_constraintWidth_percent="0.48" />

        <!-- Dirección -->

        <TextView
            android:id="@+id/direccion_label"
            android:layout_width="64dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="Direccion"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dni_edit_text" />

        <EditText
            android:id="@+id/direccion_edit_text"
            android:layout_width="349dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:hint="Ingresa tu direccion"
            android:inputType="textPostalAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direccion_label" />

        <!-- Distrito -->

        <TextView
            android:id="@+id/distrito_label"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Distrito"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/direccion_edit_text" />

        <EditText
            android:id="@+id/distrito_edit_text"
            android:layout_width="358dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:hint="Ingresa tu distrito"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distrito_label" />

        <!-- Botón Continuar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continuar_button"
            android:layout_width="347dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Continuar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distrito_edit_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>