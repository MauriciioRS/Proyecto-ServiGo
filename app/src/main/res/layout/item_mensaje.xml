<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:src="@drawable/circle_avatar" />

        <!-- HORA (arriba derecha) -->
        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="1h"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvHora"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/imgAvatar"
            android:text="Juan Pérez - Gásfiter"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Último mensaje -->
        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombre"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/imgAvatar"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Mensaje de ejemplo"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <!-- Estado y botón -->
        <LinearLayout
            android:id="@+id/estadoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvHora"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:orientation="vertical">

            <!-- Contador de no leídos -->
            <TextView
                android:id="@+id/tvUnreadCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_unread"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_estado_finalizado"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="Terminado"
                android:textColor="@color/green"
                android:textSize="12sp" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
