<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".Registro2Activity">

        <!-- Flecha de retroceso -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Indicador de progreso -->

        <!-- Título principal -->
        <TextView
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Paso 2 de 3"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/back_button"
            app:layout_constraintStart_toEndOf="@+id/back_button" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ingresa los siguientes datos"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />

        <!-- Correo electrónico -->

        <TextView
            android:id="@+id/email_label"
            android:layout_width="132dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Correo electrónico"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <LinearLayout
            android:id="@+id/email_container"
            android:layout_width="358dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_label">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Ingresa tu correo"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/text_secondary" />
        </LinearLayout>

        <!-- Tipo de cuenta -->

        <TextView
            android:id="@+id/tipo_cuenta_label"
            android:layout_width="102dp"
            android:layout_height="22dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:text="Tipo de cuenta"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_container" />

        <LinearLayout
            android:id="@+id/tipo_cuenta_segmented"
            android:layout_width="350dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipo_cuenta_label">

            <Button
                android:id="@+id/cliente_button"
                android:layout_width="14dp"
                android:layout_height="38dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/segmented_button_background"
                android:stateListAnimator="@null"
                android:text="Cliente"
                android:textColor="@color/surface"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ambos_button"
                android:layout_width="18dp"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/segmented_button_background"
                android:stateListAnimator="@null"
                android:text="Ambos"
                android:textColor="@color/social_button_background"
                android:textSize="14sp" />

            <Button
                android:id="@+id/contratista_button"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/segmented_button_background"
                android:stateListAnimator="@null"
                android:text="Contratista"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Oficio -->

        <TextView
            android:id="@+id/oficio_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="Oficio"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipo_cuenta_segmented" />

        <LinearLayout
            android:id="@+id/oficio_container"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oficio_label">

            <LinearLayout
                android:layout_width="244dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/input_field_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <AutoCompleteTextView
                    android:id="@+id/oficio_auto_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Escoger el oficio"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColorHint="@color/text_secondary" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_arrow_down" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contraseña -->

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="Contraseña"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oficio_container" />

        <LinearLayout
            android:id="@+id/password_container"
            android:layout_width="352dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_label">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_key" />

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Ingresa tu contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/text_secondary" />
        </LinearLayout>

        <!-- Confirmar contraseña -->

        <TextView
            android:id="@+id/confirm_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:text="Confirmar contraseña"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_container" />

        <LinearLayout
            android:id="@+id/confirm_password_container"
            android:layout_width="354dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password_label">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_key" />

            <EditText
                android:id="@+id/confirm_password_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Confirmar tu contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/text_secondary" />
        </LinearLayout>

        <!-- Botón Continuar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continuar_button"
            android:layout_width="359dp"
            android:layout_height="41dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Continuar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password_container" />

        <Button
            android:id="@+id/button"
            android:layout_width="57dp"
            android:layout_height="40dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.869"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.427" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 2 de 3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
