<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFInal11">
        <!-- Pantalla inicial: Muestra el logo de ServiGo -->
        <activity
            android:name=".PantallaInicialActivity"
            android:theme="@style/Theme.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Pantalla de Inicio de Sesión -->
        <activity
            android:name=".InicioSesionActivity"
            android:exported="false" />
        
        <!-- Pantalla de Registro -->
        <activity
            android:name=".RegistroActivity"
            android:exported="false" />
        
        <!-- Pantalla de Registro Paso 2 -->
        <activity
            android:name=".Registro2Activity"
            android:exported="false" />
        
        <!-- Pantalla de Registro Paso 3 -->
        <activity
            android:name=".Registro3Activity"
            android:exported="false" />
        
        <!-- Pantalla principal: Home de la aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false" />

    </application>

</manifest>